@page
@model WebApp.Pages.CurrentDataModel
@{
}
<script src="~/js/pages/currentdata.js"></script>
<div class="bs-docs-section">
    <br />

    <div class="row">
        <legend>CurrenData List</legend>
        <div class="col-lg-12">

            <table id="tblListCurrentData" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>TimeStamp</th>
                        <th>Temperature</th>
                        <th>Humidity</th>
                        <th>Condition</th>
                        <th>WindSpeed</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>
                    <fieldset>
                        <legend>CurrentData registration form</legend>

                        <div class="form-group">
                            <label for="txtIdCurrent" class="form-label mt-4">CurrentData ID</label>
                            <input id="txtId" type="number" class="form-control" aria-describedby="emailHelp" placeholder="Enter Id">


                            <label for="dtTimeStampCurrent" class="form-label mt-4">TimeStamp</label>
                            <input type="date" class="form-control" id="dtTimeStampCurrent" aria-describedby="emailHelp" placeholder="Enter TimeStamp">
                            <small id="emailHelp" class="form-text text-muted">TimeStamp.</small>
                        </div>
                        <div class="form-group">
                            <label for="numTemperatureCurrent" class="form-label mt-4">Temperature</label>
                            <input type="number" class="form-control" id="numTemperatureCurrent" aria-describedby="emailHelp" placeholder="Enter temperature">
                            <small id="emailHelp" class="form-text text-muted">Temperature</small>
                        </div>
                        <div class="form-group">
                            <label for="numHumidityCurrent" class="form-label mt-4">Humidity</label>
                            <input type="number" class="form-control" id="numHumidityCurrent" aria-describedby="emailHelp" placeholder="Enter Humidity">
                            <small id="emailHelp" class="form-text text-muted">Humidity.</small>
                        </div>
                        <div class="form-group">
                            <label for="txtConditionCurrent" class="form-label mt-4">Condition</label>
                            <input type="text" class="form-control" id="txtConditionCurrent" aria-describedby="emailHelp" placeholder="Enter Condition">
                            <small id="emailHelp" class="form-text text-muted">Soleado, Lluvioso, Nublado.</small>
                        </div>
                        <div class="form-group">
                            <label for="numWindSpeedCurrent" class="form-label mt-4">WindSpeed</label>
                            <input type="number" class="form-control" id="numWindSpeedCurrent" aria-describedby="emailHelp" placeholder="Enter WindSeep">
                            <small id="emailHelp" class="form-text text-muted">WindSeed.</small>
                        </div>

                </form>
                <br />
                <button id="btnCreateCurrent" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Save</i></button>

                <button id="btnUpdateCurrent" class="source-button btn btn-warning btn-xs" type="button" tabindex="0"><i class="bi bi-code">Update</i></button>

                <button id="btnDeleteCurrent" class="source-button btn btn-danger btn-xs" type="button" tabindex="0"><i class="bi bi-code">Delete</i></button>
            </div>
        </div>
    </div>
</div>