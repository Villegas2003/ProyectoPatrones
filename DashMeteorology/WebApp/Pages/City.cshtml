@page
@model WebApp.Pages.UsersModel
@{
}
<script src="~/js/pages/City.js"></script>
<div class="bs-docs-section">
    <br />

    <div class="row">
        <legend>City List</legend>
        <div class="col-lg-12">

            <table id="tblListCity" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name City</th>
                        <th>Name Country</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

<div class="row">
    <div class="col-lg-6">
        <div class="bs-component">
            <form>
            <fieldset>
            <legend>City registration form</legend>

            <div class="form-group">
                <label for="txtIdCity" class="form-label mt-4">City ID</label>
                <input id="txtId" type="number" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">


                <label for="txtCity" class="form-label mt-4">City</label>
                <input type="text" class="form-control" id="txtCity" aria-describedby="emailHelp" placeholder="Enter complete name">
                <small id="emailHelp" class="form-text text-muted">City.</small>
            </div>
            <div class="form-group">
                <label for="txtCountry" class="form-label mt-4">Country</label>
                <input type="text" class="form-control" id="txtCountry" aria-describedby="emailHelp" placeholder="Enter name">
                <small id="emailHelp" class="form-text text-muted">Country</small>
            </div>
            <div class="form-group">
                <label for="numLatitude" class="form-label mt-4">Latitude</label>
                <input type="number" class="form-control" id="numLatitude" aria-describedby="emailHelp" placeholder="Enter latitude">
                <small id="emailHelp" class="form-text text-muted">Latitude.</small>
            </div>
            <div class="form-group">
                <label for="numLongitude" class="form-label mt-4">Longitude</label>
                <input type="number" class="form-control" id="numLongitude" aria-describedby="emailHelp" placeholder="Enter longitude">
                <small id="emailHelp" class="form-text text-muted">Longitude.</small>
            </div>

            </form>
            <br />
            <button id="btnCreateCity" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Save</i></button>

            <button id="btnUpdateCity" class="source-button btn btn-warning btn-xs" type="button" tabindex="0"><i class="bi bi-code">Update</i></button>

            <button id="btnDeleteCity" class="source-button btn btn-danger btn-xs" type="button" tabindex="0"><i class="bi bi-code">Delete</i></button>
        </div>
    </div>
</div>
</div>